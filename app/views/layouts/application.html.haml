!!!
%html(ng-app="EasyBakeOven")
  - min = Rails.env.development? ? '' : '.min'
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "EasyBakeOven"
      %meta{:content => content_for?(:description) ? yield(:description) : "EasyBakeOven", :name => "description"}
        = stylesheet_link_tag "application", :media => "all"
        = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Roboto:400,400italic,900,900italic,300,300italic'
        = stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome#{min}.css"
        = stylesheet_link_tag "//cdnjs.cloudflare.com/ajax/libs/angularjs-toaster/0.4.4/toaster.css"
        = csrf_meta_tags
        = yield(:head)
  %body{:class => "#{controller_name} #{action_name}"}
    = render 'layouts/navigation'
    #main{:role => "main"}
      .container
        .row
          .span12
            = render 'layouts/messages'
            = yield
        %footer
          %toaster-container(toaster-options="{'position-class': 'toast-bottom-right'}")

    = javascript_include_tag "//ajax.googleapis.com/ajax/libs/angularjs/1.2.20/angular#{min}.js"
    = javascript_include_tag "//ajax.googleapis.com/ajax/libs/angularjs/1.2.20/angular-route#{min}.js"
    = javascript_include_tag "//ajax.googleapis.com/ajax/libs/angularjs/1.2.20/angular-resource#{min}.js"
    = javascript_include_tag "//ajax.googleapis.com/ajax/libs/angularjs/1.2.20/angular-animate#{min}.js"
    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/angular-ui/0.4.0/angular-ui#{min}.js"
    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.6.0/ui-bootstrap-tpls#{min}.js"
    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/angularjs-toaster/0.4.4/toaster#{min}.js"
    = javascript_include_tag 'application'
